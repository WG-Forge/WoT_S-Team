<Page x:Class="UIClient.View.Pages.LoadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UIClient.View.Pages"
      xmlns:vm="clr-namespace:UIClient.ViewModel" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:b="clr-namespace:UIClient.Infrastructure.Behavior"
      FontFamily="{StaticResource FontCenturyGothic}"
      d:DesignHeight="250" d:DesignWidth="650"
      DataContext="{Binding LoadPageViewModel, Source={StaticResource Locator}}">
    <Page.Resources>
        <Storyboard x:Key="LoadAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="rectangle">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.8" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Page.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LoadAnimation}"/>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="../../Resources/Images/prev.jpg"/>
                </Grid.Background>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" Visibility="{Binding IsControlVisible}">
                    <TextBlock HorizontalAlignment="Left" Margin="10 0" Text="Имя:" FontSize="22" VerticalAlignment="Center" 
                               Foreground="{StaticResource ControlMouseOverBorderBrush}"/>
                    <TextBox HorizontalAlignment="Right" Margin="10 0" Grid.Row="2" Height="30" Width="170" FontSize="18" 
                             HorizontalContentAlignment="Center"
                             Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Grid.Row="2" Visibility="{Binding IsControlVisible}">
                    <TextBlock HorizontalAlignment="Left" Margin="10 0" Text="Пароль:" FontSize="22" VerticalAlignment="Center" 
                               Foreground="{StaticResource ControlMouseOverBorderBrush}"/>
                    <TextBox HorizontalAlignment="Right" Margin="10 0" Grid.Row="2" Height="30" Width="170" FontSize="18" 
                             HorizontalContentAlignment="Center"
                             Text="{Binding Pass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Grid Grid.Row="3" Visibility="{Binding IsControlVisible}">
                    <TextBlock HorizontalAlignment="Left" Margin="10 0" Text="Имя игры:" FontSize="22" VerticalAlignment="Center" 
                               Foreground="{StaticResource ControlMouseOverBorderBrush}"/>
                    <TextBox HorizontalAlignment="Right" Margin="10 0" Grid.Row="2" Height="30" Width="170" FontSize="18" 
                             HorizontalContentAlignment="Center"
                             Text="{Binding GameName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Grid.Row="4" Visibility="{Binding IsControlVisible}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" Margin="10 0" Text="Игроки:" FontSize="22" VerticalAlignment="Center" 
                               Foreground="{StaticResource ControlMouseOverBorderBrush}"/>
                    <TextBox HorizontalAlignment="Right" Grid.Row="2" Height="30" Width="50" FontSize="18" 
                             HorizontalContentAlignment="Center"
                             Text="{Binding PlayersMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock HorizontalAlignment="Left" Margin="10 0" Text="Ходы:" FontSize="22" VerticalAlignment="Center" 
                               Foreground="{StaticResource ControlMouseOverBorderBrush}"/>
                    </StackPanel>
                    <TextBox HorizontalAlignment="Right" Margin="0 0 10 0" Grid.Row="2" Height="30" Width="50" FontSize="18" 
                             HorizontalContentAlignment="Center"
                             Text="{Binding TurnMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                
                <Grid Grid.Row="5" Visibility="{Binding IsControlVisible}">
                    <CheckBox Content="Наблюдать" FontSize="22" Margin="10 0" HorizontalAlignment="Left"
                                IsChecked="{Binding IsObserver, Mode=TwoWay}" Foreground="{StaticResource ControlPressedBorderBrush}"
                                Height="30" Style="{StaticResource CheckboxStyle}" Focusable="False"/>
                    <Button Width="80" Grid.Row="3" Command="{Binding LoginCommand}" Margin="10 0" HorizontalAlignment="Right"
                                Height="30" FontSize="22" Style="{StaticResource ButtonCustom}" 
                            Content="Войти"/>
                </Grid>

                <StackPanel Grid.Row="3" Visibility="{Binding IsControlVisible}">
                    </StackPanel>



                <TextBlock x:Name="text_block" Visibility="{Binding IsLoadVisible}" Grid.Row="3" Text="Загрузка..." VerticalAlignment="Center" HorizontalAlignment="Center"
                       FontSize="22" Foreground="{StaticResource ControlMouseOverBorderBrush}"/>

                <Rectangle x:Name="rectangle" Grid.Row ="3" Visibility="{Binding IsLoadVisible}" HorizontalAlignment="Center" Height="3" 
                           Width="200" StrokeThickness="0" 
                           VerticalAlignment="Bottom">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="{StaticResource ControlMouseOverBorderColor}" Offset="0.5"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

            </Grid>
        </Grid>
        <Rectangle Height="20" VerticalAlignment="Bottom">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Offset="1" Color="#001E1E1E"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
            <i:Interaction.Behaviors>
                <b:WindowMoveBehavior/>
            </i:Interaction.Behaviors>
        </Rectangle>
        <TextBlock Grid.Row="4" Text="{Binding Core.Logs[0]}" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                       FontSize="12" Foreground="{StaticResource ControlMouseOverBorderBrush}" Margin="2 0 0 2"/>
    </Grid>
</Page>
